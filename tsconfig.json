{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "server.ts",
    "run-dev.ts",
    "api/**/*.ts",
    "assets/js/script.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 